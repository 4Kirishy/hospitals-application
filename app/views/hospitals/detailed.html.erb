
<% if @hospital.image.attached? %>
<%= image_tag @hospital.image, class: "w-80 h-80 object-cover" %>
<% end %>
<h1 class="text-2xl mb-10 font-semibold"><%= @hospital.name %></h1>
<h2 class="text-2xl mb-10 font-semibold"><%= @hospital.category %></h2>
<h2 class="text-xl font-semibold mb-5">Departments:</h2>
<ul>
    <% @hospital.departments.each do |d| %>
    <li class="p-4 border border-neutral-900 flex items-center justify-between mb-2">
        <h3 class="font-semibold"><%= d.name %></h3>
        <%= link_to "read more", "/hospitals", class: "text-blue-800 hover:underline" %>
        <!-- change /hospitals to "#{departments_path}/#{d.id}" -->
    </li>
    <% end %>
</ul>
<%= link_to "pdf", hospitals_pdf_path(@hospital.id.to_i), target: "_blank" %>